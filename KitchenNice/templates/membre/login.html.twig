{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}
    <div class="container mt-4">

        {% if error %}
            <div class="alert alert-danger">
                {{ error.getMessageKey | trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div class="login_form">
            <h3 class="text-center">Connexion</h3>
            <form action="{{ path('login') }}" method="post">
                <div class="row form-group">
                    <div class="col-md-4"></div>
                    <div class="col-md-4" style="text-align: center; margin-left: auto; margin-right: auto">
                        <label for="username">Pseudo</label>
                        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
                    </div>
                    <div class="col-md-4"></div>
                </div>

                <div class="row form-group">
                    <div class="col-md-4"></div>
                    <div class="col-md-4" style="text-align: center; margin-left: auto; margin-right: auto">
                        <label for="password">Mot de passe</label>
                        <input type="password" id="password" name="_password" class="form-control">
                    </div>
                    <div class="col-md-4"></div>
                </div>
                <div style="text-align: center">
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                </div>
            </form>

            <br>

            <div style="text-align: center">
                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal">
                    Mot de passe oublié ?
                </button>
            </div>

            <br>

        </div>


        <div class="modal fade" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Retrouver mon mot de passe</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <p>Entrez votre pseudo. Un email de confirmation avec votre nouveau mot de passe vous sera envoyé.</p>
                        <form action="{{ path('membre.lost_password') }}" method="post">
                            <div class="form-group">
                                <input type="text" id="username" name="_username" class="form-control" placeholder="Votre pseudo">
                            </div>

                            <button type="submit" class="btn btn-primary">Valider</button>
                        </form>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
                    </div>

                </div>
            </div>
        </div>

    </div>
{% endblock %}